# Application Settings
APP_NAME=TaskFlow
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# Server Settings
API_HOST=0.0.0.0
API_PORT=8000
DASHBOARD_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000

# Database (PostgreSQL)
DATABASE_URL=postgresql://taskflow:password@localhost:5432/taskflow
DATABASE_ECHO=true
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# JWT Settings
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Worker Settings
WORKER_CAPACITY=5
WORKER_TIMEOUT_SECONDS=300
WORKER_MAX_RETRIES=5
WORKER_RETRY_BACKOFF_SECONDS=2
WORKER_HEARTBEAT_INTERVAL_SECONDS=10
WORKER_DEAD_TIMEOUT_SECONDS=30

# Task Settings
TASK_DEFAULT_PRIORITY=5
TASK_MIN_PRIORITY=1
TASK_MAX_PRIORITY=10

# Email Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@taskflow.io
SMTP_FROM_NAME=TaskFlow
SMTP_USE_TLS=true
SMTP_TIMEOUT_SECONDS=10
SMTP_CONNECTION_POOL_SIZE=5

# Campaign Settings
CAMPAIGN_DEFAULT_RATE_LIMIT=100
CAMPAIGN_MAX_RATE_LIMIT=1000

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Observability
TRACING_ENABLED=false
METRICS_ENABLED=true

# Feature Flags
ENABLE_CAMPAIGNS=true
ENABLE_SCHEDULING=true
ENABLE_DEPENDENCIES=true
ENABLE_DLQ=true
ENABLE_HEALTH_CHECK=true

# Testing (only in development)
TESTING=false
TEST_DATABASE_URL=postgresql://taskflow:password@localhost:5432/taskflow_test
